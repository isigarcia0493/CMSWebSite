@model Image

@{
    ViewData["Title"] = "Delete Image";
}


<div>
    <div class="header">
        <h1>Are you sure you want to delete this image?</h1>
    </div>
    <div class="detailsView">
        <div class="details">
            <dl class="row mb-5">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.ShortDescription)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.LongDescription)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.LongDescription)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Album.Name)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Album.Name)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.UploadDate)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.UploadDate)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.UpdatedDate)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.UpdatedDate)
                </dd>
            </dl>
            <div class="offset-3">
                <form asp-action="DeleteImage" asp-controller="Image">
                    <input type="hidden" asp-for="ImageId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to Photos", "Index", "Image", "", new { @class="btn btn-secondary" })
                </form>
            </div>
        </div>
        <div class="col-6">
            <div class="photo">
                <img src="@Model.ImageUrl" alt="@Model.ShortDescription" width="500" height="500" />
            </div>
        </div>
    </div>
</div>            
