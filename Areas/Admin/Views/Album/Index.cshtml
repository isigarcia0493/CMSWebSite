@model IEnumerable<Album>

@{
    ViewData["Title"] = "List of Albums";
}

<div class="mainWrapper">
    <div>
        <div class="header">
            <h1>Albums</h1>
        </div>
    </div>
    <table class="table table-bordered tables">
        <tr class="thead-dark">
            <th style="width: 30%;">Name</th>
            <th style="width: 30%;">Category</th>
            <th style="width: 20%;">Cover</th>
            <th style="width: 20%; text-align: center;">
                @Html.ActionLink("Add Album", "AddAlbum", "Album", "", new { @class="btn btn-success" })
            </th>
        </tr>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Name</td>
                <td>@album.Category.CategoryName</td>
                <td><img src="@album.AlbumImageUrl" alt="@album.ShortDescription" width="50" height="50" /></td>
                <td style="text-align: center;">
                    @Html.ActionLink("Details", "AlbumDetails", "Album", new{ id = album.AlbumId }, new { @class="btn btn-primary" }) |
                    @Html.ActionLink("Delete", "DeleteAlbum", "Album", new{ id = album.AlbumId }, new { @class="btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>
