@model Album

@{
    ViewData["Title"] = "Delete Album";
}

<div>
    <div class="header">
        <h3>Are you sure you want to delete this album?</h3>
    </div>
    <div class="detailsView">
        <div class="details">
            <dl class="row">
                <dt class = "col-sm-6">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-6">
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.ShortDescription)
                </dd>
                <dt class = "col-sm-6">
                    @Html.DisplayNameFor(model => model.LongDescription)
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.LongDescription)
                </dd>
                <dt class = "col-sm-6">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd class>
            </dl>  
            <div class="offset-3 mt-5">
                <form asp-action="DeleteAlbum" asp-controller="Album">
                    <input type="hidden" asp-for="AlbumId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Got to List", "Index", "Album", new{ id = Model.AlbumId}, new { @class="btn btn-secondary"})
                </form>
            </div>
        </div> 
        <div class="col-6">
            <div class="photo">
                <img src="~/Images/Albums/@Model.AlbumImageUrl" alt="@Model.ShortDescription" width="600" height="500" />
            </div>
        </div>
    </div>
</div>
