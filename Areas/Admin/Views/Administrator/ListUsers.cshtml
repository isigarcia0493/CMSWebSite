@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Users";
}

<div class="mainWrapper">
    <div class="header">
        <h1>List of Users</h1>
    </div>

    @if (Model.Any())
    {
        <div>
            <table class ="table table-bordered tables">
                <tr class="thead-dark">
                    <th style="width: 80%;">Users</th>
                    <th style="width: 20%; text-align: center;">Actions</th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.UserName
                        </td>
                        <td style="text-align: center;">
                            @Html.ActionLink("Delete", "DeleteUser", "Administrator", new { id = user.Id }, new { @class="btn btn-danger" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <div class="table table-striped">
            <table>
                <tr>
                    <th>Users</th>
                </tr>
                <tr>
                    <td>No Users Yet</td>
                </tr>
            </table>
        </div>
    }
</div>
