@model IdentityUser

@{
    ViewData["Tile"] = "Delete User";
}

<div class="mainWrapper">
    <div class="header">
        <h1>Are you sure you want to delete this user?</h1>
    </div>
    <div class="form-container mt-5">
        @using (Html.BeginForm("DeleteUser", "Administrator", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div>
                @Html.ValidationSummary("", new { @class="text-danger" })
            </div>
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group mb-lg-5">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control fs-3", @readonly = true } })
            </div>
            <div class="form-group">
                <input type="submit" value="Yes" class="btn btn-primary offset-5" /> |
                @Html.ActionLink("No", "ListUsers", "Administrator", "", new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>

