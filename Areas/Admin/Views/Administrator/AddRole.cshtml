@model RoleViewModel

@{
    ViewData["Tile"] = "Add New Role";
}

<div class="mainWrapper">
    <div class="header">
        <h1>Add New Role</h1>
    </div>
    <div class="form-container">
        @using (Html.BeginForm("AddRole", "Administrator", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class="text-danger" })
            <div class="form-group mb-5">
                @Html.LabelFor(model => model.RoleName, new { @class="required" })
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class="text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Add Role" class="btn btn-primary" /> |
                @Html.ActionLink("Cancel", "GetRoles", "Administrator", "", new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>