@model IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}
<div class="mainWrapper">
    <div class="header">
        <h1>Are you sure you want to delete this role?</h1>
    </div>
    <div class="form-container mt-5">
        @using (Html.BeginForm("DeleteRole", "Administrator", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class="text-danger" })
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group mb-lg-5">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control fs-3", @readonly = true } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class="text-danger" })
            </div>
            <div class="form-group offset-5">
                <input type="submit" value="Yes" class="btn btn-primary" /> |
                @Html.ActionLink("No", "GetRoles", "Administrator", "", new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>

