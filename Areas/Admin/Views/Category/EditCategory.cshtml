@model Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="mainWrapper">
    <div class="header">
        <h1>Edit Category</h1>
    </div>
    <div class="form-container">
        @using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
        {
            <div class="alert-danger" role="alert">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class="text-danger" })
                @Html.HiddenFor(model => model.CategoryId)
            </div>
            <div class="inputs">
                <div class="row mb-4">
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.CategoryName, new { @class = "required" })
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class="text-danger" })
                    </div>
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.ShortDescription, new { @class="required" })
                        @Html.EditorFor(model => model.ShortDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ShortDescription, "", new { @class="text-danger" })
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="form-group col-12">
                        @Html.LabelFor(model => model.LongDescription, new { @class="required" })
                        @Html.TextAreaFor(model => model.LongDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LongDescription, "", new { @class="text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-12">
                        <div class="buttons">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            @Html.ActionLink("Cancel", "Index", "Category", "", new { @class="btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>            
        }
    </div>    
</div>
