@inject SignInManager<ApplicationUser> _signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JeanneBaerPhotographs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/forms.css" rel="stylesheet" />
    <link href="~/css/admingeneral.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid ml-4 mr-4">
                @Html.ActionLink("JeanneBaerPhotographs", "Index", "Dashboard", "", new { @class="navbar-brand" })
                <ul class="navbar-nav ml-auto">
                    @if (_signInManager.IsSignedIn(User))
                    {
                        @using (Html.BeginForm("LogOut", "Account", FormMethod.Post))
                        {
                            <li class="nav-item">
                                <button type="submit" class="nav-link btn btn-link text-dark" style="width: auto;">
                                    Hi, @User.Identity.Name | Logout
                                </button>
                            </li>
                        }
                    }                      
                </ul>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                        <div class="d-flex flex-column align-items-center align-items-sm-start px-4 pt-2 text-white min-vh-100">
                            <div class="align-items-center pb-0 text-white text-decoration-none menuHeader">                                
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="fs-2 d-inline-block">Menu</span>
                            </button>
                            </div>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="nav mb-sm-auto mb-0 mt-3" id="menu" role="tablist">
                                <li class="nav-item">
                                    @Html.ActionLink("Categories", "Index", "Category", "", new { @class="nav-link fs-5 ms-0 d-inline-block text-white items-menu", role="tab" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Albums", "Index", "Album", "", new { @class="nav-link fs-5 ms-0 d-inline-block text-white items-menu", role="tab" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Photos", "Index", "Image", "", new { @class="nav-link fs-5 ms-0 d-inline-block text-white items-menu", role="tab" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Events", "Index", "Event", "", new { @class="nav-link fs-5 ms-0 d-inline-block text-white items-menu", role="tab" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Carousel", "Index", "Carousel", "", new { @class="nav-link fs-5 ms-0 d-inline-block text-white items-menu", role="tab" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Roles", "GetRoles", "Administrator", "", new { @class="nav-link fs-5 ms-0 d-inline-block text-white items-menu", role="tab" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Users", "ListUsers", "Administrator", "", new { @class="nav-link fs-5 ms-0 d-inline-block text-white items-menu", role="tab" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Go to Website", "Index", "Home", "", new { @class="nav-link fs-5 ms-0 d-inline-block text-white items-menu", role="tab" })
                                </li>
                            </ul>
                        </div>
                    </div>                    
                    </div>
                    <div class="col py-3 content">
                        @RenderBody()
                    </div>
                </div>       
            </div>   
    </header>
    <footer class="border-top footer text-muted text-dark align-items-center bg-white">
        <div class="container-fluid">
            &copy; 2023 - JeanneBaerPhotographs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
