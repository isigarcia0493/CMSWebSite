@model IEnumerable<Carousel>

@{
    ViewData["Title"] = "Carousel Images";
}

<div class="mainWrapper">
    <div>
        <div class="header">
            <h1>All Photos in Carousel</h1>
        </div>
    </div>
    <table class="table table-bordered tables">
        <tr class="thead-dark">
            <th style="width: 30%;">Name</th>
            <th style="width: 30%;">Short Description</th>
            <th style="width: 20%; text-align: center;">Image</th>
            <th style="width: 20%; text-align: center;">
                @Html.ActionLink("Add Image", "AddCarousel", "Carousel", "", new { @class="btn btn-success" })
            </th>
        </tr>
        @foreach (var carouselImage in Model)
        {
            <tr>
                <td>@carouselImage.ImageName</td>
                <td>@carouselImage.ShortDescription</td>
                <td style="text-align: center;"><img src="@carouselImage.ImageUrl" alt="@carouselImage.ShortDescription" width="50" height="50" /></td>
                <td style="text-align: center;">
                    @Html.ActionLink("Details", "CarouselDetails", "Carousel", new{ id = carouselImage.CarouselId }, new { @class="btn btn-primary" }) |
                    @Html.ActionLink("Delete", "DeleteCarousel", "Carousel", new{ id = carouselImage.CarouselId }, new { @class="btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>
