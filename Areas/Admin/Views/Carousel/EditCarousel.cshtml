@model CarouselViewModel

@{
    ViewData["Title"] = "Edit Carousel";
}

<div class="mainWrapper">
    <div class="header">
        <h1>Edit Carousel: @Model.ImageName</h1>
    </div>
    <div class="form-container">
        @using (Html.BeginForm("EditCarousel", "Carousel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="alert-danger" role="alert">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class="text-danger" })
            </div>
            @Html.HiddenFor(model => model.CarouselId)
            <div class="inputs">
                <div class="row mb-4">
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.ImageName, new { @class = "required" })
                        @Html.EditorFor(model => model.ImageName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ImageName, "", new { @class="text-danger" })
                    </div>
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.ShortDescription, new { @class="required" })
                        @Html.EditorFor(model => model.ShortDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ShortDescription, "", new { @class="text-danger" })
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="form-group col-12">
                        @Html.LabelFor(model => model.LongDescription, new { @class="required" })
                        @Html.TextAreaFor(model => model.LongDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LongDescription, "", new { @class="text-danger" })
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.ExpirationDate, new { @class="required" })
                        @Html.EditorFor(model => model.ExpirationDate, new { htmlAttributes = new { @class = "form-control", type="date"}})
                        @Html.ValidationMessageFor(model => model.ExpirationDate, "", new { @class="text-danger" })
                    </div>
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.ImageUrl, new { @class="required" })
                        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", type="file"})
                        @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class="text-danger" })
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.DisplayImage)
                        @Html.EditorFor(model => model.DisplayImage,  new { @class = "form-control" } )
                        @Html.ValidationMessageFor(model => model.DisplayImage, "", new { @class="text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-12">
                        <div class="buttons">
                            <input type="submit" value="Edit" class="btn btn-primary btn-lg" /> |
                            @Html.ActionLink("Cancel", "CarouselDetails", "Carousel", new { id = Model.CarouselId }, new { @class="btn btn-danger btn-lg" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>