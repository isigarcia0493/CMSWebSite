@model IEnumerable<Registration>

@{
    ViewData["Title"] = "Registrations";
}

<div class="mainWrapper">
    <div>
        <div class="header">
            @if (ViewBag.Event == null)
            {

                <h1>All Registrations</h1>

            }
            else
            {
                <h1>Registrations for @ViewBag.Event</h1>
            }
        </div>
    </div>
    <table class="table table-bordered tables">
        <tr class="thead-dark">
            <th style="width: 30%;">Full Name</th>
            <th style="width: 30%;">People Attending</th>
            <th style="width: 20%;">Event</th>
            <th style="width: 20%; text-align: center;">Actions</th>
        </tr>
        @foreach (var registration in Model)
        {
            <tr>
                <td>@registration.User.FirstName @registration.User.LastName</td>
                <td>@registration.PeopleAttending</td>
                @foreach(var eventModel in registration.Events)
                {
                    <td>@eventModel.EventName</td>
                }
                <td style="text-align: center;">
                    @Html.ActionLink("Details", "RegistrationDetails", "Registration", new{ id = registration.RegistrationId }, new { @class="btn btn-primary" }) |
                    @Html.ActionLink("Delete", "DeleteRegistration", "Registration", new{ id = registration.RegistrationId }, new { @class="btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>
