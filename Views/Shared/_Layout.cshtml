@inject SignInManager<ApplicationUser> _signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JeanneBaerPhotographs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/forms.css" rel="stylesheet" />
    <link href="~/css/general.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-2">
            <div class="container-fluid">
                @Html.ActionLink("JeanneBaerPhotographs", "Index", "Home", "", new { @class="navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ml-auto">
                        @if (_signInManager.IsSignedIn(User))
                        {
                            @using (Html.BeginForm("LogOut", "Account", FormMethod.Post))
                            {
                                <li class="nav-item">
                                    <button type="submit" class="nav-link btn btn-link text-dark" style="width: auto;">
                                        Hi, @User.Identity.Name | Logout
                                    </button>
                                </li>
                            }
                        }
                        else
                        {
                        <li class="nav-item">
                            @Html.ActionLink("Register", "Register", "Account", "", new { @class="nav-link text-dark" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", "", new { @class="nav-link text-dark" })
                        </li>
                        }
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", "", new { @class="nav-link text-dark" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Privacy", "Privacy", "Home", "", new { @class="nav-link text-dark" })
                        </li>
                        @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Categories", "Index", "Category", "", new { @class="nav-link text-dark" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Albums", "Index", "Album", "", new { @class="nav-link text-dark" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Roles", "GetRoles", "Administrator", "", new { @class="nav-link text-dark" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Users", "ListUsers", "Administrator", "", new { @class="nav-link text-dark" })
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2023 - JeanneBaerPhotographs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
