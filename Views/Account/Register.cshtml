@model RegisterViewModel

@{
    ViewData["Title"] = "Registration Form";
}

<div class="row">
    <div class="form-row">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary("", new { @class="text-danger" })               

