@model IEnumerable<Album>


<div class="container-fluid pl-5">
    <div class="header">
        <h1>All Albums</h1>
    </div>
    <div class="row pt-3">
        @foreach (var album in Model)
        {
            <div class="col-md-2 d-flex justify-content-center">
                <div class="outsideCard mt-3">
                    <div class="card" style="width: 18rem;"> 
                        <a class="text-decoration-none" href="@Url.ActionLink("Photos", "Album", new { id = album.AlbumId})">
                            <div class="img-thumbnail p-3">
                                <img src="@album.AlbumImageUrl" asp-append-version="true" class="card-img-top" alt="@album.ShortDescription" height="250">
                            </div>                        
                            <div class="card-body p-2" style="text-align: center">
                                <h4 class="card-title fw-bold">@album.Name</h4>
                                <p>@album.ShortDescription</p>
                            </div>
                        </a>
                    </div>
                </div>                
            </div>
        }
    </div>
</div>
