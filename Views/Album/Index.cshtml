@model IEnumerable<Album>

@{
    ViewData["Title"] = "List of Albums";
}

<div class="mainWrapper">
    <div>
        <div class="header">
            <h1>Albums</h1>
        </div>
    </div>
    <table class="table table-bordered table-striped tables">
        <tr>
            <th style="width: 40%;">Name</th>
            <th style="width: 40%;">Short Description</th>
            <th style="width: 20%; text-align: center;">
                @Html.ActionLink("Add Album", "AddAlbum", "Album", "", new { @class="btn btn-success" })
            </th>
        </tr>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Name</td>
                <td>@album.ShortDescription</td>
                <td style="text-align: center;">
                    @Html.ActionLink("Details", "AlbumDetails", "Album", new{ id = album.CategoryId }, new { @class="btn btn-primary" }) |
                    @Html.ActionLink("Delete", "DeleteAlbum", "Album", new{ id = album.CategoryId }, new { @class="btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>
