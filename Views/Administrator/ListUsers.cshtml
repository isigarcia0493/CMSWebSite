@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Users";
}

<h1>List of Users</h1>

@if (Model.Any())
{
    <div class="table table-responsive-lg table-striped">
        <table>
            <tr>
                <th>Users</th>
                <th>Actions</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", "Administrator", new { id = user.Id }, new { @class="btn btn-primary" })
                        @Html.ActionLink("Delete", "DeleteUser", "Administrator", new { id = user.Id }, new { @class="btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="table table-striped">
        <table>
            <tr>
                <th>Users</th>
            </tr>
            <tr>
                <td>No Users Yet</td>
            </tr>
        </table>
    </div>
}
