@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="mainWrapper">
    <div>
        <div class="header">
            <h1>Categories</h1>
        </div>
    </div>
    <table class="table table-bordered table-striped tables">
        <tr>
            <th style="width: 40%;">Name</th>
            <th style="width: 40%;">Short Description</th>
            <th style="width: 20%; text-align: center;">
                @Html.ActionLink("Add Category", "AddCategory", "Category", "", new { @class="btn btn-success" })
            </th>
        </tr>
        @foreach(var category in Model)
        {
        <tr>
            <td>@category.CategoryName</td>
            <td>@category.ShortDescription</td>
                <td style="text-align: center;">
                @Html.ActionLink("Details", "CategoryDetails", "Category", new{ id = category.CategoryId }, new { @class="btn btn-primary" }) |
                @Html.ActionLink("Delete", "DeleteCategory", "Category", new{ id = category.CategoryId }, new { @class="btn btn-danger" })
            </td>
        </tr>
        }
    </table>
</div>
