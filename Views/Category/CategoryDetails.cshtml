@model Category

@{
    ViewData["Title"] = "CategoryDetails";
}

<h1>@Model.CategoryName Details</h1>

<div>
    <div class="mb-3">
        @Html.LabelFor(model => model.CategoryName)
        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.ShortDescription)
        @Html.EditorFor(model => model.ShortDescription, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.LongDescription)
        @Html.TextAreaFor(model => model.LongDescription, new { @class = "form-control", @readonly = true })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Albums)
        @if (Model.Albums == null)
        {
            <p>There is not albums yet!</p>
        }
        else
        {
            foreach (var album in Model.Albums)
            {
                @album.Name
            }
        }
    </div>
    <div>
        @Html.ActionLink("Edit", "EditCategory", "Category", new { id = Model.CategoryId }, new { @class="btn btn-primary" } )
        @Html.ActionLink("Back to Catgories", "Index", "Category", "", new { @class="btn btn-dark" } )
    </div>
</div>

