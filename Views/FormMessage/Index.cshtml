@model FormMessage

@{
    ViewData["Title"] = "Send Message";
}

<div class="mainWrapper">
    <div class="header">
        <h1 class="text-white">Send Message</h1>
    </div>
    <div class="form-container mt-4">
        @using (Html.BeginForm("AddMessage", "FormMessage", FormMethod.Post))
        {
            <div class="alert-danger" role="alert">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class="text-danger" })
            </div>
            <div class="inputs">
                @Html.HiddenFor(model => model.UserId)
                <div class="row mb-4">
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.FirstName)
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @value=Model.FirstName, @readonly=true } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class="text-danger" })
                    </div>
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.LastName)
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @value=Model.LastName, @readonly=true } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class="text-danger" })
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="form-group col-6">
                        @Html.LabelFor(model => model.Subject, new { @class="required" })
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" }})
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class="text-danger" })
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="form-group col-12">
                        @Html.LabelFor(model => model.Body, new { @class="required" })
                        @Html.TextAreaFor(model => model.Body, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Body, "", new { @class="text-danger" })
                    </div>                    
                </div>
                <div class="row">
                    <div class="form-group col-12">
                        <div class="buttons">
                            <input type="submit" value="Send" class="btn btn-primary btn-lg" /> |
                            @Html.ActionLink("Cancel", "Index", "Home", "", new { @class="btn btn-danger btn-lg" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
